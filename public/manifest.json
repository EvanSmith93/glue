{
  "manifest_version": 3,
  "name": "Spring",
  "version": "1.0",
  "description": "Recoil from endless scrolling",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "permissions": ["storage", "activeTab"]
}
